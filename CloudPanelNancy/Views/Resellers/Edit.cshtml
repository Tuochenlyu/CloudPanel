@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@{
    Layout = "Views/Shared/_Layout.cshtml";
}

@section PAGEHEADER{
    <div class="pageheader">
        <h2><i class="fa fa-home"></i> Resellers <span>Subtitle goes here...</span></h2>
        <div class="breadcrumb-wrapper">
            <span class="label">You are here:</span>
            <ol class="breadcrumb">
                <li><a href="index.html">Bracket</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </div>
    </div>
}

<form action="/Resellers/@Model.CompanyCode/Edit" method="post">
    <div class="form-horizontal">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Reseller</h4>
            </div>

            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Company Name <span class="asterisk">*</span></label>
                    <div class="col-sm-4">
                        <input name="txtCompanyName" type="text" class="form-control" value="@Model.CompanyName" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Contact Name</label>
                    <div class="col-sm-4">
                        <input id="txtContactsName" type="text" value="@Model.AdminName" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-4">
                        <input id="txtEmail" type="text" value="@Model.AdminEmail" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Telephone</label>
                    <div class="col-sm-4">
                        <input id="txtTelephone" type="text" value="@Model.Telephone" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Street Address</label>
                    <div class="col-sm-4">
                        <input id="txtStreetAddress" type="text" value="@Model.Street" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">City</label>
                    <div class="col-sm-4">
                        <input id="txtCity" type="text" value="@Model.City" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">State</label>
                    <div class="col-sm-4">
                        <input id="txtState" type="text" value="@Model.State" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Postal Code</label>
                    <div class="col-sm-4">
                        <input id="txtZipCode" type="text" @Model.ZipCode class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Country</label>
                    <div class="col-sm-4">
                    </div>
                </div>
            </div>
            <!-- panel-body -->

            <div class="panel-footer" style="text-align: right">
                <input id="btnCancel" type="button" value="Cancel" class="btn btn-default" onclick="javascript: history.go(-1);" />
                <input id="btnSave" type="submit" value="Save" class="btn btn-primary" />
            </div>
            <!-- panel-footer -->

            @ViewBag.EditCompanyName

        </div>
        <!-- panel-default -->

    </div>
</form>
