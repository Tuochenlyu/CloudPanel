@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@{
    Layout = "Views/Shared/_Layout.cshtml";
}

@section PAGEHEADER{
<div class="pageheader">
    <h2><i class="glyphicon glyphicon-envelope"></i> Email <span>Contacts...</span></h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li><a href="~/">Bracket</a></li>
            <li><a href="~/">Dashboard</a></li>
            <li><a href="~/Mailbox">Email</a></li>
            <li class="active">Edit Contact</li>
        </ol>
    </div>
</div>
}
        
<div class="form-horizontal">
    @*Begin horrible hack.*@
    <form id="mainForm" @(Path.Split('/').LastOrDefault().ToLower() != "contacts" ? "method=\"put\"" : "method=\"post\"") >
    @*End horrible hack.*@
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Add/Edit Contact</h4>
                </div>

                <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Display Name <span class="asterisk">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" id="displayName" class="form-control" value="@Model.DisplayName" />
                                <input type="hidden" id="contactDistinguishedName" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email<span class="asterisk">*</span></label>
                            <div class="col-sm-4">
                                <input type="email" id="email" class="form-control" value ="@Model.Email" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <div class="col-sm-4">
                                <div class="ckbox ckbox-success">
                                    <input type="checkbox" id="isHidden" value="Hidden" @(Model.IsHidden ? "checked" : "") />
                                    <label for='isHidden'>Hide Contact?</label>
                                </div>
                            </div>
                        </div>
                </div>
                <!-- panel-body -->

                <div class="panel-footer" style="text-align: right">
                    <a href="~/Company/@Model.CompanyCode/Contacts" class="btn btn-default">Cancel</a>
                    <button type="submit" id="save" class="btn btn-primary active">Save</button>
                </div>
                <!-- panel-footer -->
            </div>
        </div>
    </form>
</div>

@section CUSTOMJAVASCRIPT{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#save").click(function() {
                $("#mainForm").validate({
                    rules: {
                    displayName: { required: true },
                    email: { email: true, required: true }
            },
                errorPlacement: function() { return false; },
            highlight: function (element, errorClass, validClass) {
                $(element).parents('.form-group').removeClass('has-success');
                $(element).parents('.form-group').addClass('has-error');
                },
            unhighlight: function (element, errorClass, validClass) {
                $(element).parents('.form-group').removeClass('has-error');
                $(element).parents('.form-group').addClass('has-success');
            }
        });
        </script>
}
